@model PacchettoViaggio
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Modifica Viaggio</h1>
            </div>
            <form action="@Url.Action("Modifica", "PacchettoViaggio")" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="img" class="d-block w-100" />
                    <span asp-validation-for="img" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Titolo:</strong>
                    <input asp-for="nome" class="d-block w-100" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="descrizione" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="descrizione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="prezzo" class="d-block w-10" />
                    <span asp-validation-for="prezzo" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>

            </form>
        </div>
    </div>
</div>
